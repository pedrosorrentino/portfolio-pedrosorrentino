---
import { getRelativeLocaleUrl } from 'astro:i18n';
import { getI18n } from '@/utils/config';

const currentLocale = Astro.currentLocale || 'en';
const i18n = getI18n(currentLocale);
const locales = ['en', 'es'];

const homePath = '/';

const localeNames: Record<string, string> = {
  en: 'English',
