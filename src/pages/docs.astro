---
import TerminalMenu from '@/components/TerminalMenu.astro';
import Layout from '../layouts/Layout.astro';
import TerminalHeader from '@/components/TerminalHeader.astro';
import NoArticlesBlog from '@/components/NoArticlesBlog.astro';
import CardArticleBlog from '@/components/CardArticleBlog.astro';

interface Article {
  title: string;
  createdDate: string;
  url: string;
}
const ARTICLES: Article[] = [];
---

<Layout>
  <div
    class='bg-slate-700 dark:bg-black text-white dark:text-gray-100 p-6 rounded-lg w-full max-w-4xl mx-auto font-mono mt-10 shadow-lg'
  >
    <h1 class='sr-only'>Latest Blog Posts</h1>

    <TerminalHeader title='Latest Blog Posts' />

    <div class='mt-4 space-y-8'>
      <p class='text-green-400 dark:text-rose-400'>$ cat docs.txt</p>

      {
        ARTICLES.length === 0 ? (
          <NoArticlesBlog />
        ) : (
          ARTICLES.map((article) => <CardArticleBlog article={article} />)
        )
      }
      <TerminalMenu />
    </div>
  </div>
</Layout>
