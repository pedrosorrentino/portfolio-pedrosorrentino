---
import Layout from '../layouts/Layout.astro';
import TerminalHeader from '@/components/TerminalHeader.astro';
import ContactForm from '@/components/ContactForm.astro';
import TerminalMenu from '@/components/TerminalMenu.astro';
---

<Layout>
  <div
    class='bg-slate-700 dark:bg-black text-white dark:text-gray-100 p-6 rounded-lg w-full max-w-4xl mx-auto font-mono mt-10 shadow-lg'
  >
    <h1 class='hidden'>Contact Pedro Sorrentino</h1>

    <TerminalHeader title='Contact Me' />

    <div class='mt-4 space-y-8'>
      <p class='text-green-400 dark:text-rose-400'>$ cat contact.txt</p>
      <p class='text-slate-300 dark:text-gray-300'>
        Fill out the form below to send me a message. I'll get back to you as
        soon as possible!
      </p>
      <ContactForm />
      <TerminalMenu />
    </div>
  </div>
</Layout>
